<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
    <Nullable>enable</Nullable>
    <LangVersion>10.0</LangVersion>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  <PropertyGroup>
    <PackageId>CryptoClients.Net</PackageId>
    <Authors>JKorf</Authors>
    <PackageVersion>1.0.0</PackageVersion>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <FileVersion>1.0.0</FileVersion>
    <Description>CryptoClients.Net is a collection of different cryptocurrency client libraries bundled into a single library for ease of access. The clients allow for accessing market data as well as managing accounts and trading cryptocurrencies.</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageTags>CryptoClients;CryptoClients.Net;OKX;OKX.Net;Mexc;Mexc.Net;Kucoin;Kucoin.Net;Kraken;Kraken.Net;Huobi;Huobi.Net;CoinEx;CoinEx.Net;Bybit;Bybit.Net;Bitget;Bitget.Net;Bitfinex;Bitfinex.Net;BingX;BingX.Net;Binance;Binance.Net;CryptoCurrency;CryptoCurrency Exchange</PackageTags>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/JKorf/CryptoClients.Net.git</RepositoryUrl>
    <PackageProjectUrl>https://github.com/JKorf/CryptoClients.Net</PackageProjectUrl>
    <PackageIcon>icon.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <NeutralLanguage>en</NeutralLanguage>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageReleaseNotes>https://github.com/JKorf/CryptoClients.Net?tab=readme-ov-file#release-notes</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="Icon\icon.png" Pack="true" PackagePath="\" />
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <PropertyGroup Label="Deterministic Build" Condition="'$(Configuration)' == 'Release'">
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
  </PropertyGroup>
  <ItemGroup Label="Deterministic Build" Condition="'$(Configuration)' == 'Release'">
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Binance.Net" Version="9.9.3" />
    <PackageReference Include="Bitfinex.Net" Version="7.2.5" />
    <PackageReference Include="Bybit.Net" Version="3.8.3" />
    <PackageReference Include="CoinEx.Net" Version="7.0.2" />
    <PackageReference Include="CoinGecko.Net" Version="2.2.4" />
    <PackageReference Include="Huobi.Net" Version="5.2.5" />
    <PackageReference Include="JK.BingX.Net" Version="1.0.3" />
    <PackageReference Include="JK.Bitget.Net" Version="1.3.4" />
    <PackageReference Include="JK.Mexc.Net" Version="1.2.1" />
    <PackageReference Include="JK.OKX.Net" Version="1.8.1" />
    <PackageReference Include="KrakenExchange.Net" Version="4.6.1" />
    <PackageReference Include="Kucoin.Net" Version="5.5.0" />
  </ItemGroup>
  <PropertyGroup>
    <DocumentationFile>CryptoClients.Net.xml</DocumentationFile>
  </PropertyGroup>
	
</Project>
